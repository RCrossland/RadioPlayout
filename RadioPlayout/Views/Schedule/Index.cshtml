
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
	<script src="~/Scripts/Custom/schedule_clocks.js"></script>
}

<div class="container-fluid">
	<div class="row no-gutters">
		<div class="col-4">
			<!--Area for selecting the Schedule Clock-->
			<div class="row">
				<div class="col-12">
					<div class="card h-100">
						<div class="card-header bg-dark text-white">Clock Information</div>
						<div class="card-body pl-4 pr-4 pt-2">
							<form>
								<div class="form-group">
									<label for="schedule_clock_name">Clock Name</label>
									<input type="text" class="form-control" id="schedule_clock_name" name="schedule_clock_name" />
								</div>
								<div class="form-group">
									<label for="schedule_clock_duration">Clock Average Duration</label>
									<input type="text" class="form-control" id="schedule_clock_duration" name="schedule_clock_duration" value="00:00:00" readonly />
								</div>
								<input type="submit" value="Save Clock" class="btn btn-success mt-1" />
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="card h-100">
						<div class="card-header bg-dark text-white">Current Clocks</div>
						<div class="card-body pl-4 pr-4 pt-2">
							<ul class="list-group list-group-flush">
								<li class="list-group-item pointer">Clock 1</li>
								<li class="list-group-item pointer">Clock 2</li>
								<li class="list-group-item pointer">Clock 3</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-5">
			<!--Area for creating a new schedule clock-->
			<div class="card h-100">
				<div class="card-header bg-dark text-white">
					Create Schedule Clock
				</div>
				<div class="card-body p-0">
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-3">00:00:00</div>
						<div class="col-9">80s Song A</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-3">00:00:00</div>
						<div class="col-9">80s Song A</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-3">00:00:00</div>
						<div class="col-9">80s Song A</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-3">00:00:00</div>
						<div class="col-9">80s Song A</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-3">
			<!--Area for select the new schedule clock items-->
			<div class="card h-100">
				<div class="card-header bg-dark text-white">Schedule Clock Items</div>
				<div class="card-body p-0">
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-12">
							80s Song A
						</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-12">
							80s Song B
						</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-12">
							80s Song C
						</div>
					</div>
					<div class="row no-gutters border border-dark p-2 pointer">
						<div class="col-12">
							90s Song A
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>