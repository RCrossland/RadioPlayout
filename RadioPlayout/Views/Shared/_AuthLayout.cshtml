@using Microsoft.AspNet.Identity
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles
{
	@RenderSection("styles", required: false)
}
@section scripts
{
	@RenderSection("scripts", required: false)
}

<!-- Left Navigation Panel -->
<div class="left_navigation">
	<div class="container-fluid">
		<div class="left_navigation_branding">
			<a class="navbar-brand left_navigation_logo float-left" href="@Url.Action("Index", "Home")">
				Click My Radio
			</a>
			@*@Html.Partial("_LoginPartial")*@
			<i class="fas fa-bars navigation_toggler pointer"></i>
		</div>

		<hr class="navbar-divider">

		<div class="navigation_outer">
			<div class="left_navigation_user d-flex align-items-center">
				<div class="row">
					<div class="left_navigation_user_image col-6 float-left">
						<img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/512/user-male-icon.png" alt="">
					</div>
					<div class="left_navigation_user_details col-6 float-right pr-0">
						Welcome, <br>
						@ViewBag.UserName
					</div>
				</div>
			</div>

			<hr class="navbar-divider">

			<ul class="left_navigation_list navbar-nav" data-current="@ViewBag.Title">
				<li class="navbar-item left_navigation_list_item">
					<a href="@Url.Action("Index", "Home")" class="left_navigation_list_item_link" id="nav-dashboard">
						<i class="fas fa-tachometer-alt left_navigation_list_item_icon"></i> Dashboard
					</a>
				</li>
				<li class="navbar-item left_navigation_list_item">
					<a href="@Url.Action("Index", "Schedule")" class="left_navigation_list_item_link" id="nav-schedule">
						<i class="fas fa-calendar-alt left_navigation_list_item_icon"></i> Schedule Clock
					</a>
				</li>
				<li class="navbar-item left_navigation_list_item">
					<a href="@Url.Action("Index", "Audio")" class="left_navigation_list_item_link" id="nav-catalogue">
						<i class="fas fa-music left_navigation_list_item_icon"></i> Music Catalogue
					</a>
				</li>
				<li class="navbar-item left_navigation_list_item">

					<a href="@Url.Action("Index", "RadioPlayer")" class="left_navigation_list_item_link" id="nav-playout">
						<i class="fas fa-microphone left_navigation_list_item_icon"></i> Radio Playout
					</a>
				</li>
				<li class="navbar-item left_navigation_list_item">
					<a href="#" class="left_navigation_list_item_link left_navigation_dropdown_toggle" id="nav-account">
						<i class="fas fa-user left_navigation_list_item_icon"></i> My Account
					</a>
					<ul class="left_navigation_list navbar-nav left_navigation_dropdown text-white mt-0 d-none">
						<li class="navbar-item left_navigation_list_item">
							<a href="@Url.Action("Index", "Manage")" class="left_navigation_list_item_link">
								Edit My Account
							</a>
						</li>
						<li class="navbar-item left_navigation_list_item">
							<a href="@Url.Action("ManageAccounts", "Account")" class="left_navigation_list_item_link">
								Manage Accounts
							</a>
						</li>
						<li class="navbar-item left_navigation_list_item">
							@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
							{
								@Html.AntiForgeryToken()
								<a href="javascript:document.getElementById('logoutForm').submit()" class="left_navigation_list_item_link">
									Logout
								</a>
							}
						</li>
					</ul>
				</li>
			</ul>

			<hr class="navbar-divider">
		</div>
	</div>
</div>

<!-- Top Navigation Panel -->
<div class="top_navigation">
	<div class="top_navigation_content float-right d-flex align-items-center">
		<div class="top_navigation_switch_outer">
			<i class="fas fa-toggle-on auto_dj_switch pointer fa-rotate-180"></i> <span class="auto_dj_switch_text">Auto DJ</span>
		</div>

		<div class="vl float-left"></div>

		<div class="top_navigation_date float-right">
			<ul class="top_navigation_date_list list-unstyled text-white">
				<li id="date_ref"></li>
				<li id="time_ref"></li>
			</ul>
		</div>
	</div>
</div>

<!-- Main Content -->
<div class="main_content mt-2">
	@RenderBody()
</div>